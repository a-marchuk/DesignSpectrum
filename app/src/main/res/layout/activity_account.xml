<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AccountActivity"
    android:background="@color/colorBackground">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_design_spectrum_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="-2dp"
            android:layout_toEndOf="@+id/imageButton"
            android:fontFamily="@font/montserrat_semibold"
            android:padding="10dp"
            android:paddingStart="13dp"
            android:text="Your account"
            android:textAlignment="textStart"
            android:textColor="@color/colorText"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/circle_background"
            app:srcCompat="@drawable/outline_arrow_circle_left_24"
            tools:ignore="TouchTargetSizeCheck" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="582dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingStart="30sp"
                android:text="Name"
                android:textColor="@color/grey_40"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_name_other_your_account"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingStart="30sp"
                android:textColor="@color/colorText"
                android:text=""/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingStart="30sp"
                android:text="Email"
                android:textColor="@color/grey_40"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_email_other_your_account"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingStart="30sp"
                android:textColor="@color/colorText"
                android:text=""/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingStart="30sp"
                android:text="Phone number"
                android:textColor="@color/grey_40"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_phone_number_other_your_account"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingStart="30sp"
                android:textColor="@color/colorText"
                android:text=""/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingStart="30sp"
                android:text="Country"
                android:textColor="@color/grey_40"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_country_other_your_account"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingStart="30sp"
                android:textColor="@color/colorText"
                android:text=""/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingStart="30sp"
                android:text="Gender"
                android:textColor="@color/grey_40"
                android:textSize="20dp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkbox_male_other_your_account"
                android:layout_marginStart="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:text="Male"/>

            <CheckBox
                android:id="@+id/checkbox_female_other_your_account"
                android:layout_marginStart="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:text="Female"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/btn_save_settings_your_account"
                android:text="Save settings"
                android:textColor="@color/colorBackground"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/colorSecondary"
                app:cornerRadius="20dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/btn_logout_other_your_account"
                android:text="Log out from the account"
                android:textColor="@color/colorBackground"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/colorSecondary"
                app:cornerRadius="20dp"/>

            <Button
                android:id="@+id/btn_delete_account_other_your_account"
                android:layout_width="243dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorSecondary"
                android:text="Delete account"
                android:textColor="@color/colorBackground"
                android:textSize="17sp"
                android:textStyle="bold"
                app:cornerRadius="20dp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>