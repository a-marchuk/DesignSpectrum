<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorSecondary</item>
    </style>



    <style name="BottomNavigationStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@drawable/navigation_bar</item>
        <item name="android:elevation">15dp</item>
        <item name="itemIconSize">32dp</item>
    </style>


    <style name="CheckboxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/checkbox_color_selector</item>
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Change the text color -->
        <item name="android:textColor">@color/colorText</item>

        <!-- Change the hint text color -->
        <item name="android:textColorHint">@color/colorText</item>

        <!-- Change the search icon color -->
        <item name="android:searchIcon">@color/colorText</item>

        <!-- Change the clear icon color -->
        <item name="android:closeIcon">@color/colorText</item>
    </style>


</resources>