<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:color="@color/colorPrimary">
        <shape android:shape="oval">
            <solid android:color="@color/colorPrimary" />
            <size android:width="24dp" android:height="24dp" /> <!-- Розмір кнопки -->
        </shape>
    </item>

    <!-- Стан, коли RadioButton не активний (не вибраний) -->
    <item android:state_checked="false" android:color="@color/grey_40">
        <shape android:shape="oval">
            <solid android:color="@color/grey_40" /> <!-- Правильний спосіб визначити колір безпосередньо -->
            <size android:width="24dp" android:height="24dp" /> <!-- Розмір кнопки -->
        </shape>
    </item>
</selector>
